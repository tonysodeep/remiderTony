<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppView.RegisterActivity">

    <ImageView
        android:id="@+id/logo_login"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="65dp"
        android:src="@drawable/logo"
        android:transitionName="appLogo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/app_name_Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="43dp"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:transitionName="appName"
        app:layout_constraintBottom_toBottomOf="@id/logo_login"
        app:layout_constraintStart_toEndOf="@id/logo_login"
        app:layout_constraintTop_toTopOf="@id/logo_login" />

    <FrameLayout
        android:id="@+id/box_fragment_holder"
        android:layout_width="322dp"
        android:layout_height="0dp"
        android:background="#C1DAD8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_login" />


</androidx.constraintlayout.widget.ConstraintLayout>